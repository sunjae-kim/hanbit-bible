rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 기본적인 읽기/쓰기 권한 검사
    function isSignedIn() {
      return request.auth != null;
    }
    
    // userPlans 컬렉션에 대한 규칙
    match /userPlans/{userId} {
      // 자신의 문서에만 접근 가능
      function isOwner() {
        return request.auth.uid == userId;
      }
      
      // yearPlans 서브컬렉션에 대한 규칙
      match /yearPlans/{planId} {
        // 소유자는 모든 권한, 다른 사용자는 읽기만 가능
        allow read: if isSignedIn();
        allow write: if isOwner();
        
        // months 서브컬렉션에 대한 규칙
        match /months/{monthId} {
          // 소유자는 모든 권한, 다른 사용자는 읽기만 가능
          allow read: if isSignedIn();
          allow write: if isOwner();
        }
      }
    }

    // CollectionGroup 쿼리를 위한 규칙
    match /{path=**}/months/{monthId} {
      allow read: if isSignedIn();  // 로그인한 사용자는 모든 months 문서를 읽을 수 있음
    }
  }
}
